include _includes/sharedHTMLfunctions
extends layout

block content
    .row.page-header
        .col-lg-12
                h1= name
    .row
        .col-xs-12.col-md-9
            .row
                .col-xs-12.col-sm-6
                    p.rating
                        +outputRating(rating)
                    p= address
                    .panel.panel-primary
                        .panel-heading
                            h3.panel-title Opening hour
                        .panel-body
                            each hour in hours
                                p #{hour}
                    .panel.panel-primary
                        .panel-heading
                            h3.panel-title Facilities
                        .panel-body
                            each facility in facilities
                                span.label.label-warning
                                    span.glyphicon.glyphicon-ok
                                    | &nbsp;#{facility}
                                | &nbsp;
                .col-xs-12.col-sm-6.location-map
                    .panel.panel-primary
                        .panel-heading
                            h3.panel-title Location map
                        .panel-body
                            .embed-responsive.embed-responsive-4by3
                                iframe.embed-responsive-item(src=mapLink)
            .row
                .col-xs-12
                    .panel.panel-primary.review-panel
                        .panel-heading
                            a.btn.btn-default.pull-right(href='/location/review/new') Add Review
                            h3.panel-title Customer reviews
                        .panel-body.review-container
                            each review in reviews
                                .row
                                    .review
                                        .well.well-sm.review-header
                                            span.rating
                                                +outputRating(review.rating)
                                            &nbsp;
                                            span.reviewAuthor= review.author
                                            &nbsp;
                                            small.reviewTimestamp= review.timestamp
                                        .col-xs-12
                                            p= review.text
        .col-xs-12.col-md-3
            p.lead= summaryLead
            p= summary
    
