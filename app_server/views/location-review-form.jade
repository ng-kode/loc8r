extends layout

block content      
    .row.page-header
        .col-lg-12
            h1 #{title}
    .row
        .col-xs-12.col-md-6
            form#addReview.form-horizontal(action="", method="post", role="form")
                if error
                    .alert.alert-danger(role="alert") #{error}
                #jsValidate.alert.alert-danger(style="display: none")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="name") Name
                    .col-xs-12.col-sm-10
                        input#name.form-control(name="name")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="rating") Rating
                    .col-xs-12.col-sm-2
                        select#rating.form-control.input-sm(name="rating")
                            option 5
                            option 4
                            option 3
                            option 2
                            option 1
                .form-group
                    label.col-sm-2.control-label(for="reviewText") Review
                    .col-sm-10
                        textarea#reviewText.form-control(name="reviewText", rows="5")
                button.btn.btn-default.pull-right Add my review
        .col-xs-12.col-md.4
